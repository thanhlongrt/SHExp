<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_300dp"
        android:layout_marginTop="@dimen/_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp"
        android:layout_marginTop="@dimen/_50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/animationView">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/color_dark_blue_salehub"
            android:text="Cancel"
            app:cornerRadius="@dimen/_6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/color_red_salehub"
            android:text="Start Fan"
            app:cornerRadius="@dimen/_6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/color_yellow_salehub"
            android:text="Stop Fan"
            app:cornerRadius="@dimen/_6dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>