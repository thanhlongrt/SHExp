<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_picker"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:foreground="@drawable/foreground_recyclerview"
        app:layout_constraintEnd_toStartOf="@id/np_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.salehub.CustomNumberPicker
        android:id="@+id/np_picker"
        android:layout_width="50dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rv_picker"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>